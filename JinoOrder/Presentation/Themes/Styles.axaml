        </Style>
    </ControlTheme>

    <!-- Card Theme -->
    <ControlTheme x:Key="JinoCard" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource JinoCardBackgroundBrush}" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}" />
        <Setter Property="Padding" Value="{StaticResource PaddingMedium}" />
        <Setter Property="BoxShadow" Value="0 2 4 0 #20000000" />
    </ControlTheme>

    <!-- Input TextBox Theme -->
    <ControlTheme x:Key="JinoTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="{DynamicResource JinoCardBackgroundBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource JinoTextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource JinoTextTertiaryBrush}" />
        <Setter Property="BorderThickness" Value="{StaticResource BorderThickness1}" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="MinHeight" Value="{StaticResource InputHeight}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Style Selector="^:focus">
            <Setter Property="BorderBrush" Value="{DynamicResource JinoPrimaryBrush}" />
            <Setter Property="BorderThickness" Value="{StaticResource BorderThickness2}" />
        </Style>
        <Style Selector="^:disabled">
            <Setter Property="Opacity" Value="{StaticResource OpacityDisabled}" />
        </Style>
    </ControlTheme>

    <!-- Badge Theme -->
    <ControlTheme x:Key="JinoBadge" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource JinoPrimaryBrush}" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusRound}" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="MinWidth" Value="20" />
        <Setter Property="MinHeight" Value="20" />
    </ControlTheme>

</ResourceDictionary>
