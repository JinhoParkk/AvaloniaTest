<UserControl
    x:Class="JinoOrder.Presentation.Shell.JinoOrderMainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customers="using:JinoOrder.Presentation.Customers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:menu="using:JinoOrder.Presentation.Menu"
    xmlns:orders="using:JinoOrder.Presentation.Orders"
    xmlns:stats="using:JinoOrder.Presentation.Statistics"
    xmlns:vm="using:JinoOrder.Presentation.Shell"
    d:DesignHeight="800"
    d:DesignWidth="1280"
    x:DataType="vm:JinoOrderMainViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:JinoOrderMainViewModel />
    </Design.DataContext>

    <UserControl.Styles>
        <!--  사이드바 스타일  -->
        <Style Selector="Border.sidebar">
            <Setter Property="Background" Value="#1A1A2E" />
            <Setter Property="Width" Value="240" />
        </Style>

        <!--  사이드바 메뉴 버튼  -->
        <Style Selector="Button.sidebar-menu">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#FFFFFFB3" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="MinHeight" Value="44" />
            <Setter Property="Padding" Value="16,12" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Margin" Value="8,2" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.sidebar-menu:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#FFFFFF15" />
        </Style>
        <Style Selector="Button.sidebar-menu-active">
            <Setter Property="Background" Value="#0078D4" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="MinHeight" Value="44" />
            <Setter Property="Padding" Value="16,12" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Margin" Value="8,2" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.sidebar-menu-active:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#1084D8" />
        </Style>

        <!--  헤더 스타일  -->
        <Style Selector="Border.header">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltHighBrush}" />
            <Setter Property="Height" Value="64" />
            <Setter Property="BoxShadow" Value="0 1 3 0 #20000000" />
        </Style>

        <!--  상태 뱃지  -->
        <Style Selector="Border.status-badge">
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Padding" Value="14,6" />
        </Style>

        <!--  윈도우 컨트롤 버튼  -->
        <Style Selector="Button.window-btn">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="46" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="CornerRadius" Value="0" />
        </Style>
        <Style Selector="Button.window-btn:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListLowBrush}" />
        </Style>
        <Style Selector="Button.window-btn-close:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#E81123" />
        </Style>

        <!--  하단 네비게이션 버튼 (모바일)  -->
        <Style Selector="Button.bottom-nav-btn">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#FFFFFF60" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="MinHeight" Value="64" />
            <Setter Property="Padding" Value="0,8" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style Selector="Button.bottom-nav-btn:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#FFFFFF15" />
        </Style>
        <Style Selector="Button.bottom-nav-btn-active">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="MinHeight" Value="64" />
            <Setter Property="Padding" Value="0,8" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style Selector="Button.bottom-nav-btn-active:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#FFFFFF15" />
        </Style>
    </UserControl.Styles>

    <Grid ColumnDefinitions="Auto,*" RowDefinitions="*,Auto">
        <!--  사이드바 (데스크톱 전용)  -->
        <Border
            Grid.RowSpan="2"
            Grid.Column="0"
            Classes="sidebar"
            IsVisible="{Binding ShowSidebar}">
            <Grid RowDefinitions="Auto,*,Auto">
                <!--  로고 영역  -->
                <Border Grid.Row="0" Padding="20,24,20,20">
                    <StackPanel Spacing="4">
                        <TextBlock
                            FontSize="28"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="JINO" />
                        <TextBlock
                            Margin="2,0,0,0"
                            FontSize="16"
                            FontWeight="Light"
                            Foreground="#FFFFFF80"
                            Text="ORDER" />
                    </StackPanel>
                </Border>

                <!--  메뉴 영역  -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,8">
                        <!--  주문접수  -->
                        <Button
                            Classes.sidebar-menu="{Binding !IsOrdersSelected}"
                            Classes.sidebar-menu-active="{Binding IsOrdersSelected}"
                            Command="{Binding SelectMenuCommand}"
                            CommandParameter="orders">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <PathIcon
                                    Width="20"
                                    Height="20"
                                    Data="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 14H7v-2h5v2zm5-4H7v-2h10v2zm0-4H7V7h10v2z" />
                                <TextBlock VerticalAlignment="Center" Text="주문접수" />
                                <Border
                                    Margin="8,0,0,0"
                                    Padding="8,2"
                                    Background="#E81123"
                                    CornerRadius="10"
                                    IsVisible="{Binding HasPendingOrders}">
                                    <TextBlock
                                        FontSize="11"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="{Binding PendingOrderCount}" />
                                </Border>
                            </StackPanel>
                        </Button>

                        <!--  주문내역  -->
                        <Button
                            Classes.sidebar-menu="{Binding !IsHistorySelected}"
                            Classes.sidebar-menu-active="{Binding IsHistorySelected}"
                            Command="{Binding SelectMenuCommand}"
                            CommandParameter="history">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <PathIcon
                                    Width="20"
                                    Height="20"
                                    Data="M13 3c-4.97 0-9 4.03-9 9H1l3.89 3.89.07.14L9 12H6c0-3.87 3.13-7 7-7s7 3.13 7 7-3.13 7-7 7c-1.93 0-3.68-.79-4.94-2.06l-1.42 1.42C8.27 19.99 10.51 21 13 21c4.97 0 9-4.03 9-9s-4.03-9-9-9zm-1 5v5l4.28 2.54.72-1.21-3.5-2.08V8H12z" />
                                <TextBlock VerticalAlignment="Center" Text="주문내역" />
                            </StackPanel>
                        </Button>

                        <!--  메뉴관리  -->
                        <Button
                            Classes.sidebar-menu="{Binding !IsMenuSelected}"
                            Classes.sidebar-menu-active="{Binding IsMenuSelected}"
                            Command="{Binding SelectMenuCommand}"
                            CommandParameter="menu">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <PathIcon
                                    Width="20"
                                    Height="20"
                                    Data="M8.1 13.34l2.83-2.83L3.91 3.5c-1.56 1.56-1.56 4.09 0 5.66l4.19 4.18zm6.78-1.81c1.53.71 3.68.21 5.27-1.38 1.91-1.91 2.28-4.65.81-6.12-1.46-1.46-4.2-1.1-6.12.81-1.59 1.59-2.09 3.74-1.38 5.27L3.7 19.87l1.41 1.41L12 14.41l6.88 6.88 1.41-1.41L13.41 13l1.47-1.47z" />
                                <TextBlock VerticalAlignment="Center" Text="메뉴관리" />
                            </StackPanel>
                        </Button>

                        <Border
                            Height="1"
                            Margin="16,16"
                            Background="#FFFFFF20" />

                        <!--  고객관리  -->
                        <Button
                            Classes.sidebar-menu="{Binding !IsCustomersSelected}"
                            Classes.sidebar-menu-active="{Binding IsCustomersSelected}"
                            Command="{Binding SelectMenuCommand}"
                            CommandParameter="customers">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <PathIcon
                                    Width="20"
                                    Height="20"
                                    Data="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z" />
                                <TextBlock VerticalAlignment="Center" Text="고객관리" />
                            </StackPanel>
                        </Button>

                        <!--  매출통계  -->
                        <Button
                            Classes.sidebar-menu="{Binding !IsStatsSelected}"
                            Classes.sidebar-menu-active="{Binding IsStatsSelected}"
                            Command="{Binding SelectMenuCommand}"
                            CommandParameter="stats">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <PathIcon
                                    Width="20"
                                    Height="20"
                                    Data="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z" />
                                <TextBlock VerticalAlignment="Center" Text="매출통계" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!--  하단 영역: 설정  -->
                <Border Grid.Row="2" Padding="8,16">
                    <Button
                        Classes.sidebar-menu="{Binding !IsSettingsSelected}"
                        Classes.sidebar-menu-active="{Binding IsSettingsSelected}"
                        Command="{Binding SelectMenuCommand}"
                        CommandParameter="settings">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <PathIcon
                                Width="20"
                                Height="20"
                                Data="M19.14 12.94c.04-.31.06-.63.06-.94 0-.31-.02-.63-.06-.94l2.03-1.58c.18-.14.23-.41.12-.61l-1.92-3.32c-.12-.22-.37-.29-.59-.22l-2.39.96c-.5-.38-1.03-.7-1.62-.94l-.36-2.54c-.04-.24-.24-.41-.48-.41h-3.84c-.24 0-.43.17-.47.41l-.36 2.54c-.59.24-1.13.57-1.62.94l-2.39-.96c-.22-.08-.47 0-.59.22L2.74 8.87c-.12.21-.08.47.12.61l2.03 1.58c-.04.31-.06.63-.06.94s.02.63.06.94l-2.03 1.58c-.18.14-.23.41-.12.61l1.92 3.32c.12.22.37.29.59.22l2.39-.96c.5.38 1.03.7 1.62.94l.36 2.54c.05.24.24.41.48.41h3.84c.24 0 .44-.17.47-.41l.36-2.54c.59-.24 1.13-.56 1.62-.94l2.39.96c.22.08.47 0 .59-.22l1.92-3.32c.12-.22.07-.47-.12-.61l-2.01-1.58zM12 15.6c-1.98 0-3.6-1.62-3.6-3.6s1.62-3.6 3.6-3.6 3.6 1.62 3.6 3.6-1.62 3.6-3.6 3.6z" />
                            <TextBlock VerticalAlignment="Center" Text="설정" />
                        </StackPanel>
                    </Button>
                </Border>
            </Grid>
        </Border>

        <!--  메인 컨텐츠 영역  -->
        <Grid Grid.Column="1" RowDefinitions="Auto,*">
            <!--  헤더  -->
            <Border Grid.Row="0" Classes="header">
                <Grid Margin="24,0" ColumnDefinitions="*,Auto">
                    <!--  매장 정보  -->
                    <StackPanel
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="16">
                        <TextBlock
                            FontSize="20"
                            FontWeight="Bold"
                            Text="{Binding StoreName}" />

                        <Border Classes="status-badge">
                            <Border.Background>
                                <SolidColorBrush Color="{Binding StatusColor}" />
                            </Border.Background>
                            <TextBlock
                                FontSize="13"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Text="{Binding StatusText}" />
                        </Border>

                        <StackPanel
                            Opacity="0.7"
                            Orientation="Horizontal"
                            Spacing="6">
                            <TextBlock FontSize="13" Text="수령시간" />
                            <TextBlock
                                FontSize="13"
                                FontWeight="Medium"
                                Text="{Binding PickupTimeText}" />
                        </StackPanel>

                        <ToggleSwitch
                            IsChecked="{Binding IsOpen}"
                            OffContent="영업종료"
                            OnContent="영업중" />
                    </StackPanel>
                </Grid>
            </Border>

            <!--  컨텐츠 영역  -->
            <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}">
                <Panel>
                    <!--  주문접수 화면  -->
                    <orders:OrdersView DataContext="{Binding}" IsVisible="{Binding IsOrdersSelected}" />

                    <!--  메뉴관리 화면  -->
                    <menu:MenuManagementView DataContext="{Binding}" IsVisible="{Binding IsMenuSelected}" />

                    <!--  고객관리 화면  -->
                    <customers:CustomersView DataContext="{Binding}" IsVisible="{Binding IsCustomersSelected}" />

                    <!--  매출통계 화면  -->
                    <stats:StatsView DataContext="{Binding}" IsVisible="{Binding IsStatsSelected}" />

                    <!--  주문내역 화면  -->
                    <StackPanel Margin="24" IsVisible="{Binding IsHistorySelected}">
                        <TextBlock
                            Margin="0,0,0,20"
                            FontSize="24"
                            FontWeight="Bold"
                            Text="주문 내역" />
                        <TextBlock Opacity="0.6" Text="최근 주문 내역이 여기에 표시됩니다." />
                    </StackPanel>

                    <!--  설정 화면  -->
                    <StackPanel Margin="24" IsVisible="{Binding IsSettingsSelected}">
                        <TextBlock
                            Margin="0,0,0,20"
                            FontSize="24"
                            FontWeight="Bold"
                            Text="설정" />
                        <TextBlock Opacity="0.6" Text="설정 옵션이 여기에 표시됩니다." />
                    </StackPanel>
                </Panel>
            </Border>
        </Grid>

        <!--  하단 네비게이션 (모바일 전용)  -->
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="#1A1A2E"
            IsVisible="{Binding ShowBottomNav}">
            <Grid ColumnDefinitions="*,*,*,*">
                <!--  주문접수  -->
                <Button
                    Grid.Column="0"
                    Classes.bottom-nav-btn="{Binding !IsOrdersSelected}"
                    Classes.bottom-nav-btn-active="{Binding IsOrdersSelected}"
                    Command="{Binding SelectMenuCommand}"
                    CommandParameter="orders">
                    <Grid RowDefinitions="3,*">
                        <Border
                            Grid.Row="0"
                            Background="#0078D4"
                            CornerRadius="0,0,2,2"
                            IsVisible="{Binding IsOrdersSelected}" />
                        <StackPanel
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="4">
                            <Panel>
                                <PathIcon
                                    Width="24"
                                    Height="24"
                                    Data="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 14H7v-2h5v2zm5-4H7v-2h10v2zm0-4H7V7h10v2z" />
                                <Border
                                    Margin="14,-8,0,0"
                                    Padding="5,1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Background="#E81123"
                                    CornerRadius="8"
                                    IsVisible="{Binding HasPendingOrders}">
                                    <TextBlock
                                        FontSize="10"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="{Binding PendingOrderCount}" />
                                </Border>
                            </Panel>
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="11"
                                Text="주문" />
                        </StackPanel>
                    </Grid>
                </Button>

                <!--  주문내역  -->
                <Button
                    Grid.Column="1"
                    Classes.bottom-nav-btn="{Binding !IsHistorySelected}"
                    Classes.bottom-nav-btn-active="{Binding IsHistorySelected}"
                    Command="{Binding SelectMenuCommand}"
                    CommandParameter="history">
                    <Grid RowDefinitions="3,*">
                        <Border
                            Grid.Row="0"
                            Background="#0078D4"
                            CornerRadius="0,0,2,2"
                            IsVisible="{Binding IsHistorySelected}" />
                        <StackPanel
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="4">
                            <PathIcon
                                Width="24"
                                Height="24"
                                Data="M13 3c-4.97 0-9 4.03-9 9H1l3.89 3.89.07.14L9 12H6c0-3.87 3.13-7 7-7s7 3.13 7 7-3.13 7-7 7c-1.93 0-3.68-.79-4.94-2.06l-1.42 1.42C8.27 19.99 10.51 21 13 21c4.97 0 9-4.03 9-9s-4.03-9-9-9zm-1 5v5l4.28 2.54.72-1.21-3.5-2.08V8H12z" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="11"
                                Text="내역" />
                        </StackPanel>
                    </Grid>
                </Button>

                <!--  메뉴관리  -->
                <Button
                    Grid.Column="2"
                    Classes.bottom-nav-btn="{Binding !IsMenuSelected}"
                    Classes.bottom-nav-btn-active="{Binding IsMenuSelected}"
                    Command="{Binding SelectMenuCommand}"
                    CommandParameter="menu">
                    <Grid RowDefinitions="3,*">
                        <Border
                            Grid.Row="0"
                            Background="#0078D4"
                            CornerRadius="0,0,2,2"
                            IsVisible="{Binding IsMenuSelected}" />
                        <StackPanel
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="4">
                            <PathIcon
                                Width="24"
                                Height="24"
                                Data="M8.1 13.34l2.83-2.83L3.91 3.5c-1.56 1.56-1.56 4.09 0 5.66l4.19 4.18zm6.78-1.81c1.53.71 3.68.21 5.27-1.38 1.91-1.91 2.28-4.65.81-6.12-1.46-1.46-4.2-1.1-6.12.81-1.59 1.59-2.09 3.74-1.38 5.27L3.7 19.87l1.41 1.41L12 14.41l6.88 6.88 1.41-1.41L13.41 13l1.47-1.47z" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="11"
                                Text="메뉴" />
                        </StackPanel>
                    </Grid>
                </Button>

                <!--  더보기  -->
                <Button
                    Grid.Column="3"
                    Classes.bottom-nav-btn="{Binding !IsMoreSelected}"
                    Classes.bottom-nav-btn-active="{Binding IsMoreSelected}"
                    Command="{Binding ToggleMoreMenuCommand}">
                    <Grid RowDefinitions="3,*">
                        <Border
                            Grid.Row="0"
                            Background="#0078D4"
                            CornerRadius="0,0,2,2"
                            IsVisible="{Binding IsMoreSelected}" />
                        <StackPanel
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="4">
                            <PathIcon
                                Width="24"
                                Height="24"
                                Data="M6 10c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm12 0c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm-6 0c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="11"
                                Text="더보기" />
                        </StackPanel>
                    </Grid>
                </Button>
            </Grid>
        </Border>

        <!--  더보기 메뉴 오버레이 (모바일 전용)  -->
        <Button
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="#80000000"
            BorderThickness="0"
            Command="{Binding CloseMoreMenuCommand}"
            CornerRadius="0"
            IsVisible="{Binding IsMoreMenuOpen}" />

        <!--  더보기 메뉴 시트 (모바일 전용)  -->
        <Border
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,0,0,72"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Background="#1A1A2E"
            CornerRadius="16,16,0,0"
            IsVisible="{Binding IsMoreMenuOpen}">
            <StackPanel Margin="0,8,0,16">
                <!--  시트 핸들  -->
                <Border
                    Width="40"
                    Height="4"
                    Margin="0,8,0,16"
                    HorizontalAlignment="Center"
                    Background="#FFFFFF40"
                    CornerRadius="2" />

                <!--  고객관리  -->
                <Button
                    Padding="20,16"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding SelectMoreMenuItemCommand}"
                    CommandParameter="customers">
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <PathIcon
                            Width="24"
                            Height="24"
                            Data="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"
                            Foreground="#FFFFFFB3" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="16"
                            Foreground="#FFFFFFB3"
                            Text="고객관리" />
                    </StackPanel>
                </Button>

                <!--  매출통계  -->
                <Button
                    Padding="20,16"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Background="Transparent"
