<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:JinoOrder.Presentation.Shell"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
             x:Class="JinoOrder.Presentation.Statistics.StatsView"
             x:DataType="vm:JinoOrderMainViewModel">

  <UserControl.Styles>
    <Style Selector="Border.stat-card">
      <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltHighBrush}"/>
      <Setter Property="CornerRadius" Value="12"/>
      <Setter Property="Padding" Value="20"/>
      <Setter Property="BoxShadow" Value="0 2 8 0 #10000000"/>
    </Style>

    <Style Selector="Border.menu-card">
      <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltHighBrush}"/>
      <Setter Property="CornerRadius" Value="12"/>
      <Setter Property="Padding" Value="16"/>
      <Setter Property="BoxShadow" Value="0 2 4 0 #10000000"/>
    </Style>
  </UserControl.Styles>

  <ScrollViewer Padding="24">
    <StackPanel Spacing="24">
      <!-- 오늘 요약 섹션 -->
      <TextBlock Text="오늘 요약" FontSize="24" FontWeight="Bold"/>

      <!-- 요약 카드들 -->
      <Grid ColumnDefinitions="*,*,*,*">
        <Border Grid.Column="0" Classes="stat-card" Margin="0,0,8,0">
          <StackPanel>
            <TextBlock Text="총 매출" FontSize="13" Opacity="0.6"/>
            <TextBlock Text="{Binding TodaySummary.FormattedTotalSales, FallbackValue=0원}"
                      FontSize="24" FontWeight="Bold" Foreground="#0078D4"/>
          </StackPanel>
        </Border>
        <Border Grid.Column="1" Classes="stat-card" Margin="4,0">
          <StackPanel>
            <TextBlock Text="총 주문" FontSize="13" Opacity="0.6"/>
            <TextBlock Text="{Binding TodaySummary.TotalOrders, FallbackValue=0, StringFormat={}{0}건}"
                      FontSize="24" FontWeight="Bold"/>
          </StackPanel>
        </Border>
        <Border Grid.Column="2" Classes="stat-card" Margin="4,0">
          <StackPanel>
            <TextBlock Text="완료" FontSize="13" Opacity="0.6"/>
            <TextBlock Text="{Binding TodaySummary.CompletedOrders, FallbackValue=0}"
                      FontSize="24" FontWeight="Bold" Foreground="#107C10"/>
          </StackPanel>
        </Border>
        <Border Grid.Column="3" Classes="stat-card" Margin="8,0,0,0">
          <StackPanel>
            <TextBlock Text="취소" FontSize="13" Opacity="0.6"/>
            <TextBlock Text="{Binding TodaySummary.CancelledOrders, FallbackValue=0}"
                      FontSize="24" FontWeight="Bold" Foreground="#E81123"/>
          </StackPanel>
        </Border>
      </Grid>

      <!-- 평균 주문금액 -->
      <Border Classes="stat-card">
        <Grid ColumnDefinitions="*,Auto">
          <StackPanel Grid.Column="0">
            <TextBlock Text="평균 주문금액" FontSize="14" Opacity="0.6"/>
            <TextBlock Text="{Binding TodaySummary.FormattedAverageOrderAmount, FallbackValue=0원}"
                      FontSize="28" FontWeight="SemiBold"/>
          </StackPanel>
        </Grid>
      </Border>

      <!-- 인기 메뉴 TOP 5 -->
      <TextBlock Text="인기 메뉴 TOP 5" FontSize="20" FontWeight="Bold" Margin="0,8,0,0"/>

      <ItemsControl ItemsSource="{Binding PopularMenuItems}">
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <Border Classes="menu-card" Margin="0,0,0,8">
              <Grid ColumnDefinitions="Auto,*,Auto">
                <Border Grid.Column="0" Width="32" Height="32" CornerRadius="16"
                       Background="#0078D4" Margin="0,0,16,0">
                  <TextBlock Text="{Binding Rank}" Foreground="White"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            FontWeight="Bold" FontSize="14"/>
                </Border>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                  <TextBlock Text="{Binding MenuName}" FontSize="16" FontWeight="Medium"/>
                  <TextBlock Text="{Binding OrderCount, StringFormat={}{0}잔}" FontSize="13" Opacity="0.6"/>
                </StackPanel>
                <TextBlock Grid.Column="2" Text="{Binding FormattedTotalSales}"
                          FontSize="16" FontWeight="Medium" VerticalAlignment="Center"/>
              </Grid>
            </Border>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </StackPanel>
  </ScrollViewer>
</UserControl>
