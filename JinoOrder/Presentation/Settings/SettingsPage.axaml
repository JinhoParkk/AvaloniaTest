<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:vm="using:JinoOrder.Presentation.Shell"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
             x:Class="JinoOrder.Presentation.Settings.SettingsPage"
             x:DataType="vm:JinoOrderMainViewModel">

  <ScrollViewer Padding="24">
    <StackPanel Spacing="24" MaxWidth="800">
      <TextBlock Text="설정" FontSize="24" FontWeight="SemiBold"/>

      <!-- 매장 정보 -->
      <ui:SettingsExpander Header="매장 정보"
                           Description="매장 이름 및 기본 정보를 관리합니다"
                           IconSource="Home"
                           IsExpanded="True">
        <ui:SettingsExpander.Footer>
          <Button Content="수정"/>
        </ui:SettingsExpander.Footer>
        <ui:SettingsExpanderItem Content="매장명">
          <ui:SettingsExpanderItem.Footer>
            <TextBlock Text="{Binding StoreName}" Opacity="0.7"/>
          </ui:SettingsExpanderItem.Footer>
        </ui:SettingsExpanderItem>
      </ui:SettingsExpander>

      <!-- 영업 설정 -->
      <ui:SettingsExpander Header="영업 설정"
                           Description="영업 시간 및 수령 시간을 설정합니다"
                           IconSource="Clock"
                           IsExpanded="True">
        <ui:SettingsExpanderItem Content="기본 수령 시간">
          <ui:SettingsExpanderItem.Footer>
            <ui:NumberBox Value="{Binding MinPickupTime}"
                          Minimum="5"
                          Maximum="60"
                          SpinButtonPlacementMode="Compact"/>
          </ui:SettingsExpanderItem.Footer>
        </ui:SettingsExpanderItem>
        <ui:SettingsExpanderItem Content="영업 상태">
          <ui:SettingsExpanderItem.Footer>
            <ToggleSwitch IsChecked="{Binding IsOpen}"
                         OnContent="영업중"
                         OffContent="영업종료"/>
          </ui:SettingsExpanderItem.Footer>
        </ui:SettingsExpanderItem>
      </ui:SettingsExpander>

      <!-- 알림 설정 -->
      <ui:SettingsExpander Header="알림 설정"
                           Description="주문 알림 및 사운드를 설정합니다"
                           IconSource="Alert">
        <ui:SettingsExpanderItem Content="주문 알림음">
          <ui:SettingsExpanderItem.Footer>
            <ToggleSwitch IsChecked="True"/>
          </ui:SettingsExpanderItem.Footer>
        </ui:SettingsExpanderItem>
        <ui:SettingsExpanderItem Content="푸시 알림">
          <ui:SettingsExpanderItem.Footer>
            <ToggleSwitch IsChecked="True"/>
          </ui:SettingsExpanderItem.Footer>
        </ui:SettingsExpanderItem>
      </ui:SettingsExpander>

      <!-- 앱 정보 -->
      <ui:SettingsExpander Header="앱 정보"
                           Description="버전 및 업데이트 정보"
                           IconSource="Info">
        <ui:SettingsExpanderItem Content="버전">
          <ui:SettingsExpanderItem.Footer>
            <TextBlock Text="1.0.0" Opacity="0.7"/>
          </ui:SettingsExpanderItem.Footer>
        </ui:SettingsExpanderItem>
        <ui:SettingsExpanderItem Content="업데이트 확인">
          <ui:SettingsExpanderItem.Footer>
            <Button Content="확인"/>
          </ui:SettingsExpanderItem.Footer>
        </ui:SettingsExpanderItem>
      </ui:SettingsExpander>

      <!-- 로그아웃 -->
      <Button Content="로그아웃"
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Center"
              Padding="16,12">
        <Button.Styles>
          <Style Selector="Button">
            <Setter Property="Background" Value="#E81123"/>
            <Setter Property="Foreground" Value="White"/>
          </Style>
        </Button.Styles>
      </Button>
    </StackPanel>
  </ScrollViewer>
</UserControl>
