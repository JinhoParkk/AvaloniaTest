<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:JinoOrder.Presentation.Common"
             x:Class="JinoOrder.App">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://JinoOrder/Presentation/Themes/Typography.axaml" />
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://JinoOrder/Presentation/Themes/Colors.axaml" />
                <ResourceInclude Source="avares://JinoOrder/Presentation/Themes/DesignTokens.axaml" />
                <ResourceInclude Source="avares://JinoOrder/Presentation/Themes/Styles.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
